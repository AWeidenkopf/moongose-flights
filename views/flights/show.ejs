<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/flights/show.css" />
  <%- include('../partials/nav') %>

    <main>
      <h1>
        <%= title %>
      </h1>
      <a href="/flights/<%= flight._id %>/edit">
          <button>Edit Flight</button>
        </a>
    
      <section>
        <div>Airline: </div>
        <div>
          <%= flight.airline %>
        </div>
        <div>Airport: </div>
        <div>
          <%= flight.airport %>
        </div>
        <div>Fight Number: </div>
        <div>
          <%= flight.flightNo %>
        </div>
        <div>Departs: </div>
        <div>
          <%= flight.departs %>
        </div>
        <div>Meals:</div>
        <ul>
          <% flight.meals.forEach(meal => { %>
            <li><%= meal.name %></li>
          <% }) %>
        </ul>
      </section>
      <form action="/flights/<%= flight._id %>/meals" method="post">
      <select name="mealId">
        <% meals.forEach(meal => { %> 
          <option value="<%= meal._id %>"><%= meal.name %></option>
        <% }) %>
      </select>
      <button type="submit">Add to flight</button>
    </form>
      <% if(flight.tickets.length) { %>
        <h2>Tickets:</h2>
        <table>
          <thead>
            <th>Seat</th>
            <th>Price</th>
      </thead>
      <tbody>
        <% flight.tickets.forEach(ticket=> { %>
<tr>
          <td><%= ticket.seat %></tb>
          <td> <%= ticket.price %></td>
          <% }) %>
            <% } else { %>
              <h3>No Tickets Yet</h3>
              <% } %>
            </tr>
      </tbody>
    </table>
          <h2>Add New Ticket:</h2>
    <form action="/flights/<%= flight._id %>/tickets" method="post">
      <label for="seat">Seat: </label>
      <input id="seat" name="seat" required pattern="[A-F][1-9]\d?">
      <label for="price">Price:</label>
      <input id="price" name="price">
      <button>Add Tickets</button>
    </form>
    </main>

    <%- include('../partials/footer') %>